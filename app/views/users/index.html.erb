<html>
  <head>
    <title>Home Page</title>
  </head>
  <div style="float: inline-end; display; flex" >
    <h3 style="text-align: center" ><%= button_to 'Sign Out' , destroy_user_session_path, method: :delete , data: { confirm: '
                Dp you want to sing out ? '}, data: { turbo: false }  %></h3>
  </div>
  <div class="container">
    <body>
    <% if params[:show] == "librarian_list"%>
    <h1 style="text-align: center; color: Yellow">
    List of Librarian </h1>
    <%else%>
    <h1 style="text-align: center; color: Yellow">
    List of Studnets </h1>
    <%end%>

        <button class="btn btn-warning"  > <%= link_to 'Back' , welcome_home_path %> </button>
        <br>
    <table class="table table-striped table-dark">
      <thead>
      <th>User Name</th>
      <th>Eamil</th>
      <th>Role</th>
      <th colspan="4" style="text-align: center;" >Actions</th>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr id="user_id <%= user.id %>" >
          <td><%= user.user_name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><button class="btn btn-outline-info" ><%= link_to 'View' , showbh_user_path(user) %></button></td>
          <% if user.role == 'student' %>
            <td> <button class="btn btn-outline-info"  ><%= link_to 'Borrowed List', user_path(user), data: { controller: 'try' } %></button> </td>
          <% end %>
          <td>
            <%= button_to 'Delete' , user_path(user) if can? :destroy, user , method: :delete , data: { turbo: false }  %>
          </td>
        </tr>
      <% end %>
      </tbody>
      
    </table>
    </body>
  </div>

  <%# Modal Code Here %>
</html>

