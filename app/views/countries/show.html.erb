<html>
<head>
  <title> Countries List </title>
  <style>
      hr {
          align-self: center;
          width: 50%;
      }
      h1{
          text-align: center;
          color: wheat;
      }
      h2{
          text-align: center;
          color: wheat;
      }
      p{
          text-align: center;
          color: wheat;
      }
  </style>
</head>
<body>
<h1 style="text-align: center; color: yellow">Countries Detail</h1>
<br>
<h2 style="text-align: left;" ><%= link_to 'Back', countries_path , class: 'css_class', style: 'color:yellow; text-align: center; ' %></h2>
<div class="container"  style="float: left;" >
  <table class="table table-dark table-striped" style="text-align: center;margin: 10px;'" >
    <thead>
    <tr>
      <th>Country Name</th>
    </tr>
    </thead>
    <tbody>
    <tr><td><%= @country.country_name %></td></tr>
    </tbody>
  </table>
  <hr>
  <% if @country.states.any? %>
    <table class="table table-dark table-striped" style="text-align: center;margin: 10px;'" >
      <thead>
      <tr>
        <th>State Names</th>
      </tr>
      </thead>
      <tbody>
      <% @country.states.each do |s| %>
        <tr><td><%= s.state_name %></td></tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
</body>
</html>